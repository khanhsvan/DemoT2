@{
    ViewBag.Title = "Đăng nhập";
}

<h2>Đăng nhập</h2>

@if (ViewBag.error != null)
{
    <div class="alert alert-danger">@ViewBag.error</div>
}

@using (Html.BeginForm("DangNhap", "TaiKhoan", FormMethod.Post))
{
    <div class="form-group">
        <label>Tài Khoản:</label>
        @Html.TextBox("user", null, new { @class = "form-control", placeholder = "Tài khoản" })
    </div>
    <div class="form-group">
        <label>Mật Khẩu</label>
        @Html.Password("password", null, new { @class = "form-control", placeholder = "Mật khẩu" })
    </div>

    if (ViewBag.ShowCaptcha == true)
    {
        <div class="form-group">
            <label for="captcha">Captcha:</label>
            <input type="text" id="captcha" name="captcha" class="form-control" placeholder="Nhập mã Captcha" />
            @if (ViewBag.CaptchaError != null)
            {
                <div class="alert alert-danger">@ViewBag.CaptchaError</div>
            }
        </div>
    }

    <div class="form-group">
        <div class="checkbox">
            <label>
                <input type="checkbox" name="rememberMe" /> Nhớ tôi
            </label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Đăng nhập</button>
}
