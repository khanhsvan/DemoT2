@{
    ViewBag.Title = "Đăng ký";
}

<h2>Đăng ký</h2>

@if (ViewBag.error != null)
{
    <div class="alert alert-danger">@ViewBag.error</div>
}

@using (Html.BeginForm("DangKy", "TaiKhoan", FormMethod.Post))
{
    <div class="form-group">
        <label>Tài khoản:</label>
        @Html.TextBox("user", null, new { @class = "form-control", placeholder = "Tài khoản" })
    </div>
    <div class="form-group">
        <label>Mật khẩu:</label>
        @Html.Password("password", null, new { @class = "form-control", placeholder = "Mật khẩu" })
    </div>
    <div class="form-group">
        <label>Xác nhận mật khẩu</label>
        @Html.Password("confirmPassword", null, new { @class = "form-control", placeholder = "Xác nhận mật khẩu" })
    </div>

    <button type="submit" class="btn btn-primary">Đăng ký</button>
}
