
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<DemoT2.Models.TaiKhoan>

@{
    ViewBag.Title = "Danh sách tài khoản";
}

<h2>Danh sách tài khoản</h2>

<p>
    @Html.ActionLink("Tạo tài khoản mới", "Create")
</p>

<table class="table">
    <thead>
        <tr>
            <th>Tài khoản</th>
            <th>Họ tên</th>
            <th>Số điện thoại</th>
            <th>Ngày sinh</th>
            <th>Email</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.taikhoan)</td>
                <td>@Html.DisplayFor(modelItem => item.hoten)</td>
                <td>@Html.DisplayFor(modelItem => item.sodienthoai)</td>
                <td>@item.ngaysinh.ToString("dd/MM/yyyy")</td>
                <td>@Html.DisplayFor(modelItem => item.email)</td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.taikhoan }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.taikhoan })
                </td>
            </tr>
        }
    </tbody>
</table>
